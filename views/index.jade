extends layout

block content
        #page-wrapper
              .container-fluid
                // Page Heading
                .row
                  .col-lg-12
                    h1.page-header
                      | Labhesh's 
                      small Dashboard
                // /.row
                .jumbotron
                  .row
                    .col-xs-2
                    .col-lg-3.col-md-6
                      .panel.panel-primary
                        .panel-heading
                          .row
                            .col-xs-3
                              h4 Containers
                            .col-xs-9.text-right
                              .huge 26
                        a(href='containers.html')
                          .panel-footer
                            span.pull-left View Details
                            span.pull-right
                              i.fa.fa-arrow-circle-right
                            .clearfix
                    .col-lg-3.col-md-6
                      .panel.panel-green
                        .panel-heading
                          .row
                            .col-xs-3
                              h4 Applications
                            .col-xs-9.text-right
                              .huge 124
                        a(href='application.html')
                          .panel-footer
                            span.pull-left View Details
                            span.pull-right
                              i.fa.fa-arrow-circle-right
                            .clearfix
                    .col-lg-3.col-md-6
                      .panel.panel-yellow
                        .panel-heading
                          .row
                            .col-xs-3
                              h4 Devices
                            .col-xs-9.text-right
                              .huge 14
                        a(href='devices.html')
                          .panel-footer
                            span.pull-left View Details
                            span.pull-right
                              i.fa.fa-arrow-circle-right
                            .clearfix
                // /.row
                .row
                  .col-lg-12
                    .panel.panel-default
                      .panel-heading
                        h3.panel-title
                          i.fa.fa-bar-chart-o.fa-fw
                          |  Application Chart
                      .panel-body
                        #container(style='min-width: 310px; height: 400px; margin: 0 auto')
                // /.row
                .row
                  .col-lg-4
                    .panel.panel-default
                      .panel-heading
                        h3.panel-title
                          i.fa.fa-clock-o.fa-fw
                          |  Application History
                      .panel-body
                        .list-group
                          a.list-group-item(href='#')
                            span.badge just now
                            |                                          Application 10
                          a.list-group-item(href='#')
                            span.badge Yesterday
                            |                                          Application 45
                          a.list-group-item(href='#')
                            span.badge 2 days ago
                            |                                          Application 46
                          a.list-group-item(href='#')
                            span.badge 46 minutes ago
                            |                                          Application 1
                  .col-lg-4
                    .panel.panel-default
                      .panel-heading
                        h3.panel-title
                          i.fa.fa-clock-o.fa-fw
                          |  Container History
                      .panel-body
                        .list-group
                          a.list-group-item(href='#')
                            span.badge just now
                            |                                         Container #1
                          a.list-group-item(href='#')
                            span.badge 4 minutes ago
                            |                                         Container #25
                          a.list-group-item(href='#')
                            span.badge 2 days ago
                            |                                         Container #96
                          a.list-group-item(href='#')
                            span.badge 46 minutes ago
                            |                                         Container #34
                  .col-lg-4
                    .panel.panel-default
                      .panel-heading
                        h3.panel-title
                          i.fa.fa-money.fa-fw
                          |  Active Applications
                      .panel-body
                        .table-responsive
                          table.table.table-bordered.table-hover.table-striped
                            thead
                              tr
                                th Application #
                                th Active Status
                                th Total CPU Use
                                th Contianer Id
                            tbody
                              tr
                                td 3
                                td Active
                                td 4%
                                td 10
                              tr
                                td 6
                                td Deactive
                                td 3%
                                td 23
                              tr
                                td 10
                                td Active
                                td 34%
                                td 7
                // /.row